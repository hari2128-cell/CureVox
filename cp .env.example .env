# ============================================================
# CureVox Environment Configuration
# Maintained by Team CureVox
# ------------------------------------------------------------
# NOTE:
# - This is a SAFE example file.
# - Create a `.env` file locally with actual values.
# ============================================================


# ============================================
# DATABASE
# ============================================
MONGODB_ATLAS_URI=mongodb+srv://<username>:<password>@<cluster>/<database>


# ============================================
# FLASK CONFIGURATION
# ============================================
FLASK_APP=app.py
FLASK_ENV=development
SECRET_KEY=your-secret-key
JWT_SECRET_KEY=your-jwt-secret-key
JWT_ACCESS_TOKEN_EXPIRES=3600
JWT_REFRESH_TOKEN_EXPIRES=604800


# ============================================
# EMAIL CONFIGURATION
# ============================================
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
MAIL_DEFAULT_SENDER=CureVox <your-email@gmail.com>
MAIL_SUBJECT_PREFIX=[CureVox]


# ============================================
# FILE UPLOAD SETTINGS
# ============================================
MAX_UPLOAD_SIZE=16777216
ALLOWED_EXTENSIONS=png,jpg,jpeg,gif,mp3,wav,m4a
UPLOAD_FOLDER=uploads


# ============================================
# RATE LIMITING & LOGGING
# ============================================
RATELIMIT_ENABLED=true
RATELIMIT_DEFAULT=100 per hour, 5 per second
LOG_LEVEL=INFO
LOG_FILE=logs/app.log


# ============================================
# APPLICATION SETTINGS
# ============================================
APP_NAME=CureVox
APP_VERSION=1.0.0
APP_URL=http://localhost:5000/


# ============================================
# SECURITY SETTINGS
# ============================================
CORS_ORIGINS=http://localhost:5000
CSRF_ENABLED=true
SESSION_COOKIE_SECURE=false


# ============================================
# FIREBASE CONFIGURATION (OPTIONAL)
# ============================================
FIREBASE_SERVICE_ACCOUNT=./firebase-service-account.json
FIREBASE_API_KEY=your-firebase-api-key
FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_STORAGE_BUCKET=your-bucket.appspot.com
FIREBASE_MESSAGING_SENDER_ID=xxxxxxxx
FIREBASE_APP_ID=your-app-id


# ============================================
# AI SERVICES (OPTIONAL)
# ============================================
OPENAI_API_KEY=your-openai-api-key
GOOGLE_VISION_API_KEY=your-google-vision-key


# ============================================
# SERVER CONFIGURATION
# ============================================
HOST=0.0.0.0
PORT=5000
TIMEZONE=UTC


# ============================================================
# End of Configuration
# Team CureVox
# ============================================================
